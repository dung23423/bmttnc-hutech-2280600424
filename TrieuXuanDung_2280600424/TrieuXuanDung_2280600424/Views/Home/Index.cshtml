@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-center fade-in">
    <div class="container">
        <h1 class="hero-title">Welcome to TrieuXuanDung Shop</h1>
        <p class="hero-subtitle">Discover high-quality products for every need</p>
        <a href="/Product" class="btn btn-light btn-lg">Shop Now <i class="fas fa-arrow-right ms-2"></i></a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card h-100 text-center p-4">
            <i class="fas fa-shipping-fast fa-3x text-primary mb-3"></i>
            <div class="card-body">
                <h5 class="card-title">Fast Delivery</h5>
                <p class="card-text">Get your products delivered to your doorstep in record time</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 text-center p-4">
            <i class="fas fa-medal fa-3x text-primary mb-3"></i>
            <div class="card-body">
                <h5 class="card-title">Quality Products</h5>
                <p class="card-text">We ensure the highest quality for all our products</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 text-center p-4">
            <i class="fas fa-headset fa-3x text-primary mb-3"></i>
            <div class="card-body">
                <h5 class="card-title">24/7 Support</h5>
                <p class="card-text">Our customer support team is always ready to help you</p>
            </div>
        </div>
    </div>
</div>

<h2 class="mt-5 mb-4">Featured Products</h2>

<div class="row">
    @for (int i = 1; i <= 6; i++)
    {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="/api/placeholder/400/300" class="card-img-top" alt="Product Image">
                @if (i == 1 || i == 3)
                {
                            <span class="badge-new">New</span>
                }
                    <div class="card-body">
                        <h5 class="card-title">Product @i</h5>
                        <p class="product-category">Category Name</p>
                        <p class="card-text">A short description of the product that explains its features and benefits.</p>
                        <p class="product-price">$@(59.99 + i * 10)</p>
                        <a href="#" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
            </div>
    }
</div>

<div class="row mt-5 mb-5">
    <div class="col-md-6">
        <h2>About Our Shop</h2>
        <p>TrieuXuanDung Shop is your premier destination for high-quality products. Founded in 2025, we've been serving customers with the best selection of items at competitive prices.</p>
        <p>Our mission is to provide exceptional shopping experiences through excellent customer service and top-notch products.</p>
        <a href="/Home/About" class="btn btn-outline-primary mt-3">Learn More</a>
    </div>
    <div class="col-md-6">
        <h2>Popular Categories</h2>
        <div class="mt-3">
            <a href="#" class="category-pill">Electronics</a>
            <a href="#" class="category-pill">Fashion</a>
            <a href="#" class="category-pill">Home Goods</a>
            <a href="#" class="category-pill">Sports</a>
            <a href="#" class="category-pill">Beauty</a>
            <a href="#" class="category-pill">Books</a>
            <a href="#" class="category-pill">Toys</a>
            <a href="#" class="category-pill">Automotive</a>
        </div>
    </div>
</div>