@model TrieuXuanDung_22800600424_B3.Models.Product

@{
    ViewData["Title"] = "Chi Tiết Sản Phẩm";
}

<h2 class="text-primary">Chi Tiết Sản Phẩm</h2>
<h3>@Model.Name</h3>

<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail" style="max-width: 250px;">
        }
    </div>
    <div class="col-md-8">
        <table class="table">
            <tr>
                <th>Giá:</th>
                <td>@Model.Price.ToString("N0") đ</td>
            </tr>
            <tr>
                <th>Mô tả:</th>
                <td>@Model.Description</td>
            </tr>
            <tr>
                <th>Loại:</th>
                <td>@Model.Category?.Name</td>
            </tr>
        </table>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-warning" asp-action="Update" asp-route-id="@Model.Id">Chỉnh Sửa</a>
    <a class="btn btn-secondary" asp-action="Index">Quay lại Danh sách</a>
</div>
